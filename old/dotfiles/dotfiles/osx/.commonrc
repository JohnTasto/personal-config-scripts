# Miniconda
export PATH="/Users/john/miniconda3/bin:$PATH"


# NVM
export NVM_DIR="$HOME/.nvm"
. "/usr/local/opt/nvm/nvm.sh"


# Travis
[[ -f "$HOME/.travis/travis.sh" ]] && source "$HOME/.travis/travis.sh"
